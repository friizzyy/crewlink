# ===========================================
# CrewLink Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database (PostgreSQL - Neon or Supabase recommended for Vercel)
# Local: postgres://user:password@localhost:5432/crewlink
# Neon: postgres://user:password@ep-xxx.us-east-2.aws.neon.tech/crewlink?sslmode=require
DATABASE_URL="postgres://user:password@localhost:5432/crewlink"

# NextAuth Configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# App URL (auto-detected on Vercel if not set)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Mapbox (get your token at https://mapbox.com)
NEXT_PUBLIC_MAPBOX_TOKEN="pk.your_mapbox_token_here"

# AI - Google Gemini (free tier for AI features)
# Get your API key at https://aistudio.google.com/apikey
GOOGLE_GEMINI_API_KEY="your_gemini_api_key_here"

# Legacy (no longer used, kept for reference)
# OPENAI_API_KEY="sk-your_openai_key_here"

# Email (Resend - for password reset, welcome emails, notifications)
# Get your API key at https://resend.com
RESEND_API_KEY="re_your_resend_key_here"
# EMAIL_FROM="CrewLink <noreply@crewlink.com>"

# Stripe (payment processing)
# Get your keys at https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_key_here"

# Vercel Blob (file uploads)
# Auto-configured on Vercel, or get token from Vercel dashboard
BLOB_READ_WRITE_TOKEN="vercel_blob_token_here"

# Role Toggle (QA/Admin only - NEVER enable in production)
# Set to "true" to enable Hire/Work toggle for testing both sides
# In production, users are locked to their chosen role
NEXT_PUBLIC_ENABLE_ROLE_TOGGLE="false"

# ===========================================
# Vercel Auto-Populated (do not set manually)
# ===========================================
# VERCEL_URL - Set automatically by Vercel
# NEXT_PUBLIC_VERCEL_URL - Set automatically by Vercel
