# ===========================================
# CrewLink Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database (PostgreSQL - Neon or Supabase recommended for Vercel)
# Local: postgres://user:password@localhost:5432/crewlink
# Neon: postgres://user:password@ep-xxx.us-east-2.aws.neon.tech/crewlink?sslmode=require
DATABASE_URL="postgres://user:password@localhost:5432/crewlink"

# NextAuth Configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# App URL (auto-detected on Vercel if not set)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Mapbox (get your token at https://mapbox.com)
NEXT_PUBLIC_MAPBOX_TOKEN="pk.your_mapbox_token_here"

# AI (optional - for scope cleaning feature)
OPENAI_API_KEY="sk-your_openai_key_here"

# Email (optional - for notifications)
# RESEND_API_KEY="re_your_resend_key_here"

# Role Toggle (QA/Admin only - NEVER enable in production)
# Set to "true" to enable Hire/Work toggle for testing both sides
# In production, users are locked to their chosen role
NEXT_PUBLIC_ENABLE_ROLE_TOGGLE="false"

# ===========================================
# Vercel Auto-Populated (do not set manually)
# ===========================================
# VERCEL_URL - Set automatically by Vercel
# NEXT_PUBLIC_VERCEL_URL - Set automatically by Vercel
